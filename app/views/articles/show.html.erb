<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= cl_image_tag @article.title_image.key, height: 300, width: 400, crop: :fill %>

    <% @article.images.each do |image| %>
      <%= cl_image_tag image.key, height: 200, width: 300, crop: :fill %>
    <% end -%>

    <%#= image_tag @article.title_image, height: 300, width: 400, class: "object-cover" %>

    <%= render @article %>

    <%= link_to 'Edit this article', edit_article_path(@article), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Delete this article', article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?" }, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to articles', root_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>


<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @article.title_image.key, height: 300, crop: :fill %>')">
  Cool article
</div>







